<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/username"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    
    <com.google.android.maps.MapView
        android:id="@+id/mapView"
		android:layout_width="match_parent"
		android:layout_height="400px"
 		android:enabled="true"
 		android:clickable="true"
 		android:visibility="gone"
 		android:apiKey="0aWOHH-g3oaJ1GhTb1KVyN1veoKZlvcqhTGyq2g" />
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Friends" />

    <Button
        android:id="@+id/add_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add a Friend" />    
    
    <Button
        android:id="@+id/see_friends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="See All Friends" />
 
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Events" />
    
    <Button
        android:id="@+id/create_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Event" />
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Attending" />

    <Button
        android:id="@+id/see_attending"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="See All Events You Are Attending" />
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Invites" />
    
    <Button
        android:id="@+id/see_invites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="See All Invites" />
    
</LinearLayout>